generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model temperature {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  value     Float
}
model humidity {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  value     Float
}
model co2 {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  value     Float
}
model access {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  name     	String
  motive    String
  authorized Boolean
}

enum alertStatus {
  ACTIVE
  RESOLVED
}
enum alertType {
  TEMPERATURE
  HUMIDITY
  CO2
  ACCESS
}
enum alertSeverity {
  LOW
  MEDIUM
  HIGH
}

model alert {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  user     	String
  type		  alertType
  value		  Float
  status	  alertStatus
  severity  alertSeverity?
  message   String?
  description String?
}
model alert_setting {
  id        Int      @id @default(autoincrement())
  user     	String   @unique
  temp_limit_max Float
  hum_limit_max Float
  co2_limit_max Float
  temp_limit_min Float
  hum_limit_min Float
}

model badge_link {
  id        Int      @id @default(autoincrement())
  user     	String   @unique
  otp       String?  @unique
  badge     String?  @unique
}